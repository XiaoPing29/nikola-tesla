---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<!-- 删除 WarpBackground 组件 -->
			
			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> Aurryan <br /> Consulting </H1>
				</div>

				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="#">Book a call</Link>
							<Link href="/projects" variant="secondary">View recent work</Link>
						</div>

						<Navigation client:load>
							<Link href="/blog" variant="secondary">Blog</Link>
							<Link href="/about" variant="secondary">About</Link>
							<Link href="/contact" variant="secondary">Contact</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>

<style is:global>
/* 强制移除所有深色背景并应用渐变 */
html, body {
  margin: 0 !important;
  padding: 0 !important;
  height: 100vh !important;
  width: 100% !important;
  overflow: hidden !important;
}

/* 特别针对 bg-zinc-900 类 */
body.bg-zinc-900,
body[class*="bg-"],
main[class*="bg-"],
div[class*="bg-"] {
  background: none !important;
  background-color: transparent !important;
}

/* 应用渐变背景 */
body {
  background: linear-gradient(-45deg, #e3c7a5, #c7d5d8, #9faeb5, #d6b89e, #c2b8ad) !important;
  background-size: 400% 400% !important;
  animation: gradientFlow 18s ease-in-out infinite !important;
}

/* 确保主要内容区域透明 */
.min-h-dvh,
.w-full,
.relative,
.absolute {
  background: transparent !important;
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* 毛玻璃效果覆盖 */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(25px) brightness(1.05);
  z-index: 1;
}

/* 确保内容在毛玻璃层之上 */
.z-10 {
  z-index: 20 !important;
}
</style>
